<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="searchtap" translate="label">
            <label>Searchtap</label>
        </tab>

        <!-- Credentials -->
        <section id="searchtap_credentials" translate="label" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Credentials</label>
            <tab>searchtap</tab>
            <resource>Bitqit_Searchtap::searchtap_config</resource>
            <group id="credentials" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Credentials</label>
                <field id="st_credentials_keys" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enter Credentials</label>
                </field>

                <field id="st_script_url" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enter script url</label>
                </field>

                <field id="st_css_url" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enter css url</label>
                </field>

                <field id="st_config" type="text"></field>
<!--                <field id="st_script_url" type="text"></field>-->
<!--                <field id="st_css_url" type="text"></field>-->

                <field id="build_indexes" translate="label comment tooltip" type="button" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Sync Stores</label>
                    <frontend_model>Bitqit\Searchtap\Block\System\Config\Button</frontend_model>
                </field>
            </group>
        </section>

    </system>
</config>
